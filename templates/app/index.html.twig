{% extends 'base.html.twig' %}

{% block title %}{% endblock %}

{% block body %}


{% if is_granted ("ROLE_ADMIN") %}

<h1>Statut "Producteur" à valider</h1>

<form action="{{ path('app_validated-company')}}" method="POST">
<table class="table">
    <thead class="thead-dark">
        <tr>
            <th scope="col">#</th>
            <th scope="col">Nom</th>
            <th scope="col">N° Siret</th>
            <th scope="col">Description</th>
            <th scope="col">À valider</th>
        </tr>
    </thead>
    <tbody>

    {% for company in Vcompanies %}
    
        <tr>
            <th scope="row">{{ company.id }}</th>
            <td>{{ company.name }}</td>
            <td>{{ company.siret }}</td>
            <td>{{ company.description }}</td>
            <td> <input type="checkbox" name="companyValidated[]" value={{ company.id }} id="companyValidated{{company.id}}" > </td>
        </tr>

    {% endfor %}
    </tbody>
</table>

<button type="submit">Mettre à jour</button>
</form>

{% endif %}


{# Accueil si client, connecté ou non #}


{% if is_granted ('ROLE_PRODUCTEUR')== false and is_granted ('ROLE_ADMIN') == false  %}

<div class="jumbotron jumbotron-fluid">
    <div class="container">
        <h1 class="display-4">Bienvenue sur la main verte</h1>
    </div>
</div>


<form action="{{ path('company_result')}}" method="GET">
    <div class="row">
        <div class="col">
            <input type="text" class="form-control" name="city" placeholder="Entrez le nom de votre ville">
        </div>
        <div class="col">
            <input type="text" class="form-control" name="word" placeholder="Entrez les mots-clés">
        </div>
        <div class="col">
            <button id="searchProd" type="submit">Rechercher</button>
        </div>
    </div>
</form>

<br>
<br>
<br>
<br>




<div id="carouselCompany" class="carousel slide" data-ride="carousel"  data-interval="3000">
    <div class="carousel-inner">

        {% for company in companies %}
        {% if loop.first %}


        <div class="carousel-item active">
            <a href="{{ path('company_show', {company : company.id}) }}" class="streched-link">
            <img src="{{ asset('/assets/img/etalage primeur.jpg') }}" alt="" class="d-block w-30">            
            <h5>{{company.name}}</h5>
            <p>{{company.description}}</p>
            </a>
        </div>



        {% else %}

        <div class="carousel-item">
            <a href="{{ path('company_show', {company : company.id}) }}" class="streched-link">
            <img src="{{ asset('/assets/img/etalage primeur.jpg') }}" alt="" class="d-block w-30">            
            <h5>{{company.name}}</h5>
            <p>{{company.description}}</p>
            </a>
        </div>


        {% endif %}
        {% endfor %}


    </div>
    <a class="carousel-control-prev" href="#carouselCompany" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselCompany" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>




{% endif %}





{% if is_granted ("ROLE_PRODUCTEUR")%}

<h1>Commandes à valider</h1>

<form action="{{ path('app_validated-ordered')}}" method="POST">
<table class="table">
    <thead class="thead-dark">
        <tr>
            <th scope="col">#</th>
            <th scope="col">Date de création</th>
            <th scope="col">Prix</th>
            <th scope="col">Détails</th>
            <th scope="col">À valider</th>
        </tr>
    </thead>
    <tbody>

    {% for ordered in ordereds %}
    
        <tr>
            <th scope="row">{{ ordered.id }}</th>
            <td>{{ ordered.createdAt|date('d/m/y') }}</td>
            <td>{{ ordered.totalPrice}}</td>
            <td>Détails</td>
            <td> <input type="checkbox" name="orderedValidated[]" value={{ ordered.id }} id="orderedValidated{{ordered.id}}" > </td>
        </tr>

    {% endfor %}
    </tbody>
</table>

<button type="submit">Mettre à jour</button>
</form>

<h1>Récapitulatif des commandes terminées</h1>



<table class="table">
    <thead class="thead-dark">
        <tr>
            <th scope="col">#</th>
            <th scope="col">Date de création</th>
            <th scope="col">Prix</th>
            <th scope="col">Détails</th>
            
            
        </tr>
    </thead>
    <tbody>

    {% for ordered in vOrdereds %}
    
        <tr>
            <th scope="row">{{ ordered.id }}</th>
            <td>{{ ordered.createdAt|date('d/m/y') }}</td>
            <td>{{ ordered.totalPrice}}</td>
            <td>Détails</td>

            
        </tr>

    {% endfor %}
    </tbody>
</table>


{% endif %}





{% endblock %}