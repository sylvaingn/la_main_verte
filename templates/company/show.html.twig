<hr class="my-2">
<h4>Liste des avis</h4>

<table class="table">
    <thead class="table bg-secondary">
        <tr>
            <th scope="col">Notes</th>
            <th scope="col">Commentaires</th>
        </tr>
    </thead>
    <tbody>
        
        {% for review in reviews %}

        <tr>
            <th scope="row">{{review.rating}}</th>
            <td>{{review.comment}}</td>
        </tr>

        {% endfor %}

    </tbody>
</table>
