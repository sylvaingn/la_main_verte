{% extends 'base.html.twig' %}

{% block title %}Panier{% endblock %}

{% block body %}

<h1>Votre panier :</h1>

{% if items | length >0 %}
	<table class="table">
		<thead>
			<tr>
				<th>Produit</th>
				<th>Prix</th>
				<th>Quantité</th>
				<th>Total</th>
				<th>actions</th>
			</tr>
		</thead>
		<tbody>
			{% for item in items %}
				<tr>
					<td>{{ item.product.name }}</td>
					<td>{{ item.product.price }}</td>
					<td>{{ item.quantity }} x {{ item.conditioning }}</td>
					{# // prévoir boutons "+" et "-" pour modifier les qtés avec recalcul du total ligne et total général #}
					<td>{{ item.product.price * item.quantity }}</td>
					<td>
						<a href="{{ path("cart_remove", {'id': item.stock.id}) }}" class="btn">
							{# //fonction définie dans CartController #}
							<i class="fa fa-trash"></i>
						</a>
					</td>
				</tr>
			{% endfor %}
		</tbody>
		<tfoot>
			{# // total du panier #}
			<tr>
				<td colspan="3" class="text-right">Total :
				</td>
				{# //on regroupe name:price/quantity #}
				<td>{{ total }}</td>
				<td></td>
			</tr>
		</tfoot>
	</table>
{% else %}
	<p>
		Panier vide !</p>
{% endif %}
