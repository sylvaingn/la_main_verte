{% extends 'base.html.twig' %}

{% block title %}Panier{% endblock %}

{% block body %}

<h1>Votre panier :</h1>

	{% if items | length >0 %}
		<table class="table">
			<thead>
				<tr>
					<th>Produit</th>
					<th>Quantité</th>
					<th>Conditionnement</th>
					<th>Prix</th>
					<th>Total</th>
					<th>actions</th>
				</tr>
			</thead>
			<tbody>
				{% for item in items %}
					<tr>
						<td>nom</td>
						{# <td>{{ item.id }}</td> #}
						<td>{{ item.quantity }}</td>
						{# <td>{{ item.conditioning }}</td> #}
						<td>unité</td>
						<td>prix</td>
						<td>prix * unité</td>
						<td>
							<a href="{{ path("cart_remove", {'id': item.stock.id}) }}" class="btn">
								{# //fonction définie dans CartController #}
								<i class="fa fa-trash"></i>
							</a>
						</td>
					</tr>
				{% endfor %}
			</tbody>
			<tfoot>
				{# // total du panier #}
				<tr>
					<td colspan="4" class="text-right">Total :
					</td>
					{# //on regroupe name:price/quantity #}
					<td>{{ total }}</td>
					<td></td>
				</tr>
			</tfoot>
		</table>
	{% else %}
		<p>
			Panier vide !
		</p>
	{% endif %}

{% endblock %}
