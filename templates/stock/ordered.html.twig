{% extends 'base.html.twig' %}

{% block title %}Stock disponible
{% endblock %}

{% block body %}
	<h1>résultat du producteur choisi</h1>

	<table class="table">
        <tr>
            <th>Nom</th>
            <th>Quantité disponible</th>
            <th>Unité</th>
            <th>Prix</th>
            <th>ajouter au panier</th>
        </tr>

        <tbody>
            {% for stock in stocks %}
                <tr>
                    {% if stock.description is null %}
                        <td>{{ stock.product.name}}</td>
                    {% else %}
                        <td>{{ stock.description }}</td>
                    {% endif %}
                    {% if stock.quantity == 0 %}
                        <td><i>épuisé</i></td>
                    {% else %}                        
                        <td>{{ stock.quantity }}</td>
                    {% endif %}
                    <td>{{ stock.conditioning }}</td>
                    <td>{{ stock.price }} €</td>
                    {% if stock.quantity == 0 %}
                    <td> </td>
                    {% else %}
                    <td>
                        <a id="addStockOnCart" href="{{ path('cart_add', {'id': stock.id}) }}"><i class="fa fa-cart-plus"></i></a>
                    </td>
                    {% endif %}
                </tr>
            {% else %}
                <tr>
                    <td colspan="5">aucun stock disponible</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

{% endblock %}

